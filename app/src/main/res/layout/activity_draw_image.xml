<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        tools:context="com.popmain.droidmedia.activity.DrawImageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivGlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.popmain.droidmedia.widget.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <com.popmain.droidmedia.widget.CustomImageViewKt
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.popmain.droidmedia.widget.CustomSurfaceImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <Button
                android:id="@+id/btnBitmapSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输出Bitmap大小"
                />

            <Button
                android:id="@+id/btnBitmapReduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitmap Reduce"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btnBitmapReused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bitmap复用" />


        </LinearLayout>

         <com.popmain.droidmedia.widget.SurfaceSinView
             android:layout_width="match_parent"
             android:layout_height="200dp" />

    </LinearLayout>
</ScrollView>
